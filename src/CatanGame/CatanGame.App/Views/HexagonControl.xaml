<UserControl x:Class="CatanGame.App.Views.HexagonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Width="120" Height="120">
    <Grid>
        <Canvas>
            <!-- Flat-top hexagon: 上下に辺がある六角形 -->
            <Polygon Points="30,0 90,0 120,52 90,104 30,104 0,52"
                     Stroke="Black"
                     StrokeThickness="2">
                <Polygon.Fill>
                    <SolidColorBrush Color="{Binding ResourceColor}"/>
                </Polygon.Fill>
            </Polygon>

            <Ellipse Canvas.Left="40" Canvas.Top="42"
                     Width="40" Height="40"
                     Fill="White"
                     Stroke="Black"
                     StrokeThickness="1"
                     Visibility="{Binding DisplayNumber, Converter={StaticResource StringToVisibilityConverter}}"/>

            <TextBlock Canvas.Left="60" Canvas.Top="52"
                       Text="{Binding DisplayNumber}"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <TextBlock.RenderTransform>
                    <TranslateTransform X="-10" Y="0"/>
                </TextBlock.RenderTransform>
            </TextBlock>
        </Canvas>
    </Grid>
</UserControl>
